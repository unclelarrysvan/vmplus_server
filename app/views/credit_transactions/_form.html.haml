= form_for @credit_transaction do |f|
  - if @credit_transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@credit_transaction.errors.count, "error")} prohibited this credit_transaction from being saved:"
      %ul
        - @credit_transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :card_number
    = f.text_field :card_number
  .field
    = f.label :name_on_card
    = f.text_field :name_on_card
  .field
    = f.label :amount
    = f.text_field :amount
  .field
    = f.label :cvv2_response
    = f.text_field :cvv2_response
  .field
    = f.label :card_exp
    = f.text_field :card_exp
  .field
    = f.label :approved
    = f.check_box :approved
  .field
    = f.label :error_code
    = f.text_field :error_code
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :transaction_id
    = f.text_area :transaction_id
  .field
    = f.label :transaction_time
    = f.datetime_select :transaction_time
  .field
    = f.label :approval_code
    = f.text_field :approval_code
  .field
    = f.label :credit_card_terminal_id
    = f.number_field :credit_card_terminal_id
  .actions
    = f.submit 'Save'
